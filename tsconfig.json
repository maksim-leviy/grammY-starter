{
    "compilerOptions": {
        "target": "es2016",
        "moduleResolution": "NodeNext",
        "module": "NodeNext",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "paths": {
            "@/*": ["./src/*"]
        },
        "noEmit": true
    },
    "include": ["src/**/*"]
}
